/* component/custom-tab-bar/index.wxss */
.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 152rpx;
    background: white;
    display: flex;
    padding-bottom: env(safe-area-inset-bottom);
    background: #FFFFFF;
    box-shadow: 0px 0px 10rpx rgba(0, 0, 0, 0.1);
    opacity: 1;
    border-radius: 32rpx 32rpx 0px 0px;
    overflow: hidden;
  }
  
